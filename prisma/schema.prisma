generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Using Prisma 6 syntax - will update when migrating to Prisma 7
}
model User{
  id String @id @default(uuid())
  clerkUserId String @unique
  email String @unique
  name String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Records Record[]
  Budgets Budget[]
}
model Record{
  id String @id @default(uuid())
  amount Float
  text String
  category String @default ("Other")
  date DateTime @default(now())
  userId String
  user User @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@index([userId])
}
model Budget{
  id String @id @default(uuid())
  category String
  limit Float
  month Int
  year Int
  userId String
  user User @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([userId, category, month, year])
  @@index([userId])
}